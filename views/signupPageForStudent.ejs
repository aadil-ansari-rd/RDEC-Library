    <div class="container my-3 bg-primary rounded" style="height: 5rem;">
        <div class="p-3 text-center text-white">
            <h2>Add a new Student</h2>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class=" col bg-light my-3 p-4 shadow" >
                <form action="/signup/student" method="post" enctype="multipart/form-data">
                    <div class="my-2">
                        <label for="form-label">Profile Image</label>
                        <input type="file" name="profileImage" class="form-control" id="">
                    </div>
                    <div class="my-2">
                        <label for="form-label">First Name</label>
                        <input type="text" name="firstName" class="form-control" id="">
                    </div>
                    <div class="my-2">
                        <label for="form-label">Last Name </label>
                        <input type="text" name="lastName" class="form-control" id="">
                    </div>
                    <div class="my-2">
                        <label for="form-label">AKTU Roll No</label>
                        <input type="text" name="aktuRoll" class="form-control" id="">
                    </div>
                    <div class="my-2">
                        <label for="form-label">Email Id</label>
                        <input type="email" name="email" class="form-control" id="">
                    </div>
                    <div class="my-2">
                        <label for="form-label">Password</label>
                        <input type="text" name="Password" class="form-control" id="">
                    </div>
                    
                    
                
                    <input type="submit" class="btn btn-primary w-100 my-3" name="" value="Add Student" id="">
                    <div class="text-center">
                        <a href="/loginPage/student">Already have an account</a>
                    </div>
                </form>


            </div>
            <div class="col"></div>
        </div>
    </div>
