<%- include('./base/header') %>
    <div class="container-fluid   my-3 p-5">
        <div class="row my-3">
            <div class="container-flex bg-primary mb-5  text-center text-white rounded">
                <h2>RDEC Library</h2>
            </div>
        </div>
        <div class="row my-3 justify-content-start">
            <% books.forEach((book)=>{ %>
                <div class="col-3 my-3 p-2 ">
                    <div class="card h-100" style="width: 18rem;">
                        <img src="<%= book.bookImage %>" class="card-img-top p-2" alt="...">
                        <div class="card-body bg-primary bg-gradient">
                            <h5 class="card-title text-white">
                                <%= book.bookTitle %>
                            </h5>
                            <p class="card-text">
                                <div class="text-white">Author :  <%= book.authorName %></div>
                                <div class="text-white">Language :  <%= book.language %></div>
                                <div class="d-flex text-white">Price : â‚¹ <div class=" mx-1 fw-bold"><%= book.price %></div></div>
                            </p>
                            <div class="d-flex">
                                <a href="/edit/<%= book._id %>" class="btn btn-warning ">Edit</a>
                                <a href="/delete/<%= book._id %>" class="btn btn-danger mx-3">Delete</a>

                            </div>
                        </div>
                    </div>
                </div>
                <%}) %>
        </div>
    </div>
    <%- include('./base/footer') %>
        <% %>